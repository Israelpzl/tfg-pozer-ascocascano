<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/task_item">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgContentElementId"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_photo_camera" />

            <TextView
                android:id="@+id/wordContentElementId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgContentElementId"
                android:padding="10dp"
                android:text="Contenido 1"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/wordContentElementId">

                <ImageButton
                    android:id="@+id/btnDeleteContentElementId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/button_red_cancel"
                    android:src="@drawable/ic_delete" />

                <ImageButton
                    android:id="@+id/btnEditContentElementId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_edit"
                    app:srcCompat="@drawable/ic_edit" />
            </LinearLayout>


        </RelativeLayout>

</androidx.cardview.widget.CardView>