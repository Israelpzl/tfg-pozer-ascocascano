<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/task_item"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="EL JUEGO HA TERMINADO"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/text">

            <ImageView
                android:id="@+id/img"
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/text"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/mono" />
            <ImageView
                android:id="@+id/img2"
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/text"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/mono" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/img3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/text"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/mono" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/layout">

            <ImageView
                android:id="@+id/succes1"
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/text"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/succes_letters" />
            <ImageView
                android:id="@+id/succes2"
                android:layout_weight="1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/text"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/succes_letters" />

            <ImageView
                android:layout_weight="1"
                android:id="@+id/succes3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_below="@+id/text"
                android:layout_centerInParent="true"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/succes_letters" />

        </LinearLayout>


        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerInParent="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/button_style"
            android:text="IR A CATEGORÃAS" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
