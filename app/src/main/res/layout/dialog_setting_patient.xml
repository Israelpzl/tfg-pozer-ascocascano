<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/task_item"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tittleDialogSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resuelve esta cuenta para entrar a los ajustes"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <View
            android:id="@+id/viewId2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/tittleDialogSettings"
            android:background="@color/black" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewId2"
            android:gravity="center"
            android:text="Pregunta"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:gravity="center"
            android:inputType="number"
            android:hint="4"
            android:padding="4dp"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number"
            android:gravity="right"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/cancelBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/button_red_cancel"
                android:src="@drawable/ic_cancel" />

            <ImageButton
                android:id="@+id/checkBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_green_check"
                android:src="@drawable/ic_check" />


        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>