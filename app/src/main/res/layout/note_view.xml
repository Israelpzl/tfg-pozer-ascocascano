<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/note_view"
    android:background="@color/task_item">

    <TextView
        android:id="@+id/titleNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="My title" />

    <TextView
        android:id="@+id/descriptionNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleNote"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        tools:text="My description" />

    <TextView
        android:id="@+id/dateNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionNote"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        tools:text="2 Marzo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateNote"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnDeleteNoteElementId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/button_red_cancel"
            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/btnEditNoteElementId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_edit"
            android:src="@drawable/ic_edit" />

    </LinearLayout>




</RelativeLayout>

</androidx.cardview.widget.CardView>