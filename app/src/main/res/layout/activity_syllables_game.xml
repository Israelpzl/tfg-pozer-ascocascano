        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657"
        app:srcCompat="@drawable/button_style_green" />

    <ImageView
        android:id="@+id/puzzle3"
        android:layout_width="87dp"
        android:layout_height="78dp"
